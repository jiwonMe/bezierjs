{
  "name": "kirb",
  "version": "1.1.0",
  "author": "jiwonMe",
  "description": "Modern modular Bezier curve library for 2D and 3D geometric operations",
  "type": "module",
  "exports": {
    "import": "./src/bezier.js",
    "require": "./dist/kirb.cjs"
  },
  "main": "./dist/kirb.cjs",
  "browser": "./src/bezier.js",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jiwonMe/kirb/issues"
  },
  "homepage": "https://github.com/jiwonMe/kirb",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jiwonMe/kirb.git"
  },
  "keywords": [
    "bezier",
    "curve",
    "curves",
    "geometry",
    "2d",
    "3d",
    "mathematics",
    "graphics",
    "path",
    "spline",
    "interpolation",
    "kirb"
  ],
  "scripts": {
    "test": "npm run prettier jest",
    "start": "run-s test build",
    "build": "run-s build:*",
    "build:browser": "esbuild ./src/bezier.js --bundle --minify --outfile=dist/kirb.js",
    "build:node": "esbuild ./src/bezier.js --bundle --platform=node --target=node16 --outfile=dist/kirb.cjs",
    "prettier": "run-s prettier:*",
    "prettier:src": "prettier ./src/**/*.js --write",
    "prettier:text": "prettier ./test/**/*.js --write",
    "jest": "cross-env NODE_OPTIONS=--experimental-vm-modules jest ./test/"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.10",
    "jest": "^27.4.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  }
}
